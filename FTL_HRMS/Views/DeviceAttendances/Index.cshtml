@model IEnumerable<FTL_HRMS.Models.ViewModels.VMTodaysAttendance>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous">
</script>
<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Attendance</h1>
        </div>
    </div>
</div>
<header class="panel_header">
    <h2 class="title pull-left">Todays Attendance List</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>

<div class="content-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Present",
                    Value = "Present",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Absent",
                    Value = "Absent"

                });
                listItems.Add(new SelectListItem
                {
                    Text = "Leave",
                    Value = "Leave"
                });
            }
            @using (Html.BeginForm("Index", "DeviceAttendances"))
            {
                <div class="col-md-3">
                    @Html.DropDownList("SelectType", listItems, new { @class = "form-control", style = "width:100%", @Value=ViewBag.SelectType })
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Go" class="btn btn-primary" />
                </div>
                <br /><br />
            }
                @{int rowNo = 0;}
                <table id="myTable" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>
                                Code
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                In Time
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>SL</th>
                            <th>
                                Code
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                In Time
                            </th>
                            <th>
                                Status
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center" width="5%">
                                    @(rowNo += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CheckTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

<script>
$(document).ready(function(){
    $('#myTable').DataTable();
});
</script>