@model IEnumerable<FTL_HRMS.Models.LeaveHistory>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<header class="panel_header">
    <h2 class="title pull-left">List Of Employee</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>
<br /> <br />
@using (Html.BeginForm())
{


    <div class="content-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="table-responsive" data-pattern="priority-columns">

                    <div class="btn-group">
                        @using (Html.BeginForm("PrintEmployeeList", "Employees", FormMethod.Post, new { @target = "_blank", @role = "form", @enctype = "multipart/form-data" }))
                        {
                            <button type="submit" class="btn btn-info btn-sm">
                                <span class="glyphicon glyphicon-print"></span> Print
                            </button>
                        }
                    </div>
                    <br />
                    <table cellspacing="0" id="tech-companies-1" class="table table-small-font table-bordered table-striped">
                        @{int rowNo = 0;}
                        <thead>
                            <tr>
                                <th style="text-align:center">SL</th>
                                <th data-priority="1" style="text-align:center">Employee Name</th>
                                <th data-priority="1" style="text-align:center">Leave Type</th>
                                <th data-priority="1" style="text-align:center">From Date</th>
                                <th data-priority="1" style="text-align:center">To Date</th>
                                <th data-priority="1" style="text-align:center">Day</th>
                                <th data-priority="1" style="text-align:center">Cause</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td align="center" width="5%">
                                        @(rowNo += 1)
                                    </td>
                                    <td width="10%" align="center">
                                        @Html.DisplayFor(modelItem => item.EmployeeId)
                                    </td>
                                    <td width="20%" align="center">
                                        @Html.DisplayFor(modelItem => item.LeaveTypeId)
                                    </td>
                                    <td width="10%" align="center">
                                        @Html.DisplayFor(modelItem => item.FromDate)
                                    </td>

                                    <td width="10%" align="center">
                                        @Html.DisplayFor(modelItem => item.ToDate)
                                    </td>
                                    <td width="10%" align="center">
                                        @Html.DisplayFor(modelItem => item.Day)
                                    </td>

                                    <td width="10%" align="center">
                                        @Html.DisplayFor(modelItem => item.Cause)
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
                            }
