@{
    ViewBag.Title = "Leave Report By Date Range";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<header class="panel_header">
    <h2 class="title pull-left">Leave Report List</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>
<br /> <br />
@using (Html.BeginForm("LeaveReportDateView", "Reports"))
{
    <div class="row">
        <div class="col-md-4" style="margin-left:15%">
            <div class="col-xs-7">
                <div class="form-group">
                    <label class="form-label" for="from_date">From Date</label>
                    <div class="controls">
                        <input type="text" id="from_date" name="FromDate" class="form-control datepicker" data-start-view="2" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-xs-5">
                <div class="form-group">
                    <label class="form-label" for="to_date-1">To Date</label>
                    <div class="controls">
                        <input type="text" id="to_date" name="ToDate" class="form-control datepicker" data-start-view="2" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-2" style="margin-left:40%">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>

    </div>


    <div class="content-body">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="table-responsive" data-pattern="priority-columns">
                    @if (Model.Count > 0)
                    {
                        <div class="btn-group">

                            <button type="button" onclick="location.href='@Url.Action("PrintLeaveReport", "Reports", new { fromDate = @ViewBag.FromDate , toDate = @ViewBag.ToDate})'" target="_blank" class="btn btn-info btn-sm">
                                <span class="glyphicon glyphicon-print"></span> Download PDF
                            </button>

                        </div>

                        <table cellspacing="0" id="tech-companies-1" class="table table-small-font table-bordered table-striped">

                            <thead>
                                <tr>
                                    <th style="text-align:center">SL</th>
                                    <th data-priority="1" style="text-align:center">Employee Name</th>
                                    <th data-priority="1" style="text-align:center">Leave Type</th>
                                    <th data-priority="3" style="text-align:center">Cause</th>
                                    <th data-priority="3" style="text-align:center">From Date</th>
                                    <th data-priority="1" style="text-align:center">To Date</th>
                                    <th data-priority="1" style="text-align:center">Day</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td align="center">@i</td>
                                        <td align="center">@Model[i].Employee.Name</td>
                                        <td align="center">@Model[i].LeaveType.Name</td>
                                        <td align="center">@Model[i].Cause</td>
                                        <td align="center">@Model[i].FromDate.ToString("dd-MM-yyyy")</td>
                                        <td align="center">@Model[i].ToDate.ToString("dd-MM-yyyy")</td>
                                        <td align="center">@Model[i].Day</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
}
