@model FTL_HRMS.Models.Payroll.SalaryDistribution

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Salary</h1>
        </div>
    </div>
</div>

<header class="panel_header">
    <h2 class="title pull-left">Salary Distribution</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>
<div class="content-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p style="color:red">** Summation of All Fields Should Be 100% **</p>
                <div class="row">
                    @Html.Partial("~/Views/Shared/WarningMessage.cshtml")
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Sl)
                    <div class="col-md-offset-4">
                        <div>
                            @Html.LabelFor(model => model.BasicSalary,"Basic Salary (%)", new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.BasicSalary, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.BasicSalary, "", new { @class = "text-danger" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.HouseRent, "House Rent (%)", new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.HouseRent, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.HouseRent, "", new { @class = "text-danger" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.MedicalAllowance, "Medical Allowance (%)", new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.MedicalAllowance, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.MedicalAllowance, "", new { @class = "text-danger" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.LifeInsurance, "Life Insurance (%)", new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.LifeInsurance, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.LifeInsurance, "", new { @class = "text-danger" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.FoodAllowance, "Food Allowance (%)", new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.FoodAllowance, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.FoodAllowance , "", new { @class = "text-danger" })
                        </div>

                        <div>
                            @Html.LabelFor(model => model.Entertainment, "Entertainment (%)" ,new { @class = "required" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Entertainment, new { htmlAttributes = new { @class = "form-control", style = "width:50%", @required = true } })
                            @Html.ValidationMessageFor(model => model.Entertainment, "", new { @class = "text-danger" })
                        </div>                            
                        <br />
                    </div>
                    <center>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </center>
                </div>
            }
        </div>
    </div>
</div>