@model FTL_HRMS.Models.Designation

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Designation</h1>
        </div>
    </div>
</div>
<header class="panel_header">
    <h2 class="title pull-left">Designation Details</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>

<div class="col-md-offset-4">
    <br />
    <dl class="dl-horizontal">
                <dt>
                    Code
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt>
                    Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Department Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Name)
                </dd>

                <dt>
                    Role Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.RoleName)
                </dd>

                <dt>
                    Created By
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreateEmployee.Name)
                </dd>

                <dt>
                    Create Date
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>

                <dt>
                    Updated By
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdateEmployee.Name)
                </dd>

                <dt>
                    Update Date
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdateDate)
                </dd>

            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="btn-group" style="margin-left:10%">
                    <button type="button" class="btn btn-primary btn-sm" aria-expanded="false" onclick="location.href='@Url.Action("Index", "Designations")'">Back To List</button>
                </div>
                <div class="btn-group" style="margin-left:5%">
                    <button type="button" class="btn btn-warning btn-sm" aria-expanded="false" onclick="location.href='@Url.Action("Edit", "Designations", new { id = Model.Sl })'">Edit</button>
                </div>
            }
            <br />
        </div>
