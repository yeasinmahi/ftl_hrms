
@{
    ViewBag.Title = "Sync";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Sync System</h1>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/WarningMessage.cshtml")
</div>
<div class="col-lg-6">
    <header class="panel_header">
        <h2 class="title pull-left">Sync Attendance</h2>
        <div class="actions panel_actions pull-right">
            <i class="box_toggle fa fa-chevron-down"></i>
        </div>
    </header>

    <div class="content-body">
        <div class="row">
            <h4>Last Sync Date :<b> @ViewData["LastSyncAttendance"]</b></h4>
            
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm" aria-expanded="false" onclick="location.href = '@Url.Action("SyncAttendance", "Attendance")'">Sync Attendance</button>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-6">
    <header class="panel_header">
        <h2 class="title pull-left">Sync Earn Leave</h2>
        <div class="actions panel_actions pull-right">
            <i class="box_toggle fa fa-chevron-down"></i>
        </div>
    </header>

    <div class="content-body">
        <div class="row">
            <h4>Last Sync Date :<b> @ViewData["LastSyncEarnLeave"]</b></h4>
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm" aria-expanded="false" onclick="location.href = '@Url.Action("CalculateEarnLeave", "EarnLeave")'">Sync Earn Leave</button>
            </div>
        </div>
    </div>
</div>
