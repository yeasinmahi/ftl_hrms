@model IEnumerable<FTL_HRMS.Models.Employee>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<header class="panel_header">
    <h2 class="title pull-left">List Of Employee</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>
<br /> <br />
@using (Html.BeginForm())
{
    <div class="row">
        <div class="form-group">
            <div class="col-md-4" align="right"><h5> Select Type: </h5></div>
            <div class="col-md-6">@Html.DropDownList("EmployeeTypeId", null, "--All--", htmlAttributes: new { @class = "form-control", style = "width:100%", @name = "name" })</div>

            <div class="col-md-2 ">
                <input type="submit" value="Submit" name="Submit" class="btn btn-info" />
            </div>
        </div>
    </div>
}
<div class="content-body">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="table-responsive" data-pattern="priority-columns">
                @if (ViewBag.Status != null)
                {
                    if (ViewBag.TypeName == null)
                    {
                        <div align="center">
                            <p><b>Type Name : </b> All Employee's List</p>
                        </div>
                    }
                    else
                    {
                        <div align="center">
                            <p><b>Type Name : </b> @ViewBag.TypeName</p>
                        </div>
                    }


                    <div class="btn-group">
                        @using (Html.BeginForm("PrintEmployeeList", "Employees", FormMethod.Post, new { @target = "_blank", @role = "form", @enctype = "multipart/form-data" }))
                        {
                            <button type="submit" class="btn btn-info btn-sm">
                                <span class="glyphicon glyphicon-print"></span> Print
                            </button>
                        }
                    </div>
                        <br />
                                <table cellspacing="0" id="tech-companies-1" class="table table-small-font table-bordered table-striped">
                                    @{int rowNo = 0;}
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">SL</th>
                                            <th data-priority="1" style="text-align:center">Code</th>
                                            <th data-priority="1" style="text-align:center">Name</th>
                                            <th data-priority="3" style="text-align:center">Phone</th>
                                            <th data-priority="1" style="text-align:center">Email</th>
                                            <th data-priority="3" style="text-align:center">Date Of Joining</th>
                                            <th data-priority="6" style="text-align:center">Branch</th>
                                            <th data-priority="1" style="text-align:center">Designation</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td align="center" width="5%">
                                                    @(rowNo += 1)
                                                </td>
                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.Code)
                                                </td>
                                                <td width="20%" align="center">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.Mobile)
                                                </td>

                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.DateOfJoining)
                                                </td>
                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.BranchId)
                                                </td>
                                                <td width="10%" align="center">
                                                    @Html.DisplayFor(modelItem => item.DesignationId)
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                                        }
            </div>
        </div>
    </div>
</div>
