@model IEnumerable<FTL_HRMS.Models.MenuItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive" data-pattern="priority-columns">
    <table cellspacing="0" id="tech-companies-1" class="table table-small-font table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentItemId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ControllerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ActionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AllFunctions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ViewNames)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MenuOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IcnClass)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentItemId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ControllerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllFunctions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ViewNames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IcnClass)
                    </td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Primary <span class="caret"></span></button>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                                <li>@Html.ActionLink("Details", "Details", new { id = item.Id })</li>
                                <li>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
            </tbody>

</table>
</div>