@model IEnumerable<FTL_HRMS.Models.PerformanceRating>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous">
</script>
<div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Performance Ratings</h1>
        </div>
    </div>
</div>
<header class="panel_header">
    <h2 class="title pull-left">Performance Ratings List</h2>
    <div class="actions panel_actions pull-right">
        <i class="box_toggle fa fa-chevron-down"></i>
    </div>
</header>

<div class="content-body">
    <div class="row">
        <div class="col-md-6">
            <div class="btn-group">
                <button type="button" class="btn btn-primary btn-sm" aria-expanded="false" onclick="location.href='@Url.Action("Create", "PerformanceRatings")'">Add Performance Rating</button>
            </div><br /><br />
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            @{int rowNo = 0;}
            <table id="myTable" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Action</th>
                        <th>
                            Employee Code
                        </th>
                        <th>
                            Employee Name
                        </th>
                        <th>
                            Performance Issue
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Date
                        </th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>SL</th>
                        <th>Action</th>
                        <th>
                            Employee Code
                        </th>
                        <th>
                            Employee Name
                        </th>
                        <th>
                            Performance Issue
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Date
                        </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center" width="5%">
                                @(rowNo += 1)
                            </td>
                            <td align="center" width="5%">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary btn-sm" aria-expanded="false" onclick="location.href='@Url.Action("Edit", "PerformanceRatings", new { id = item.Sl })'">Edit</button>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PerformanceIssue.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rating)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
    $('#myTable').DataTable();
});
</script>
