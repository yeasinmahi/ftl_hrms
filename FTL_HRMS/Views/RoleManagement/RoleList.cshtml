@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Manage Class";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="col-md-12">

    <div class="tabbable">
        <ul class="nav nav-tabs padding-12 tab-color-blue background-blue" id="myTab">
           

            <li><h2> Role List</h2></li> 
        </ul>

        <div class="tab-content">
            <div id="list" class="tab-pane fade in active">

                <table id="table_export" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th><div>#</div></th>
                            <th>Role Name</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@Html.DisplayFor(t=>t[i].Name)</td>
                                
                                <td>
                                    <a href="@Url.Action("EditRole", "Roles", new { RoleId = @Model[i].Id })" title="Edit" class="btn btn-icon-only blue">
										<i class="fa fa-edit"></i>
									</a>

									@*<a href="@Url.Action("EmployeeDelete", "SchoolEmployee", new { EmployeeId=@Model[i].Id })" title="Delete" class="btn btn-icon-only red">
										<i class="fa fa-trash-o"></i>
									</a>*@
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>

                           
                        </div>
                    </div>
                </div>

                <script>
                    function visible_group(class_code) {
                        if (class_code > 10)
                            $("#group_col").show();
                        else
                            $("#group_col").hide();
                    }
                    jQuery(document).ready(function ($) {
                        var datatable = $("#table_export").dataTable();
                        $(".dataTables_wrapper select").select2({
                            minimumResultsForSearch: -1
                        });
                    });
                </script>