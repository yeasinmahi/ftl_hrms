
@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("UserManagement_Add", "Roles", FormMethod.Post, new { @class = "manage_student", @role = "form" }))
{
    <div class="row">
        <div class="col-md-12" style="margin-top: 5px;">
            <div class="row">
                <div class="col-sm-2">
                    Role:
                </div>
                <div class="col-sm-3">
                    @Html.DropDownList("RoleName", null, "Select Role", new { @class = "form-control", @style = "width:100%", @id = "recipient_ddl" })
                </div>
            </div>
			<div class="row">
                <div class="col-sm-2">
                    Username:
                </div>
                <div class="col-sm-3">
                    <input type="text" class="form-control student_form" required name="UserName" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    Password:
                </div>
                <div class="col-sm-3 mar-bottom">
                    <input type="password" class="form-control student_form" required name="UserPassword" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    Mobile No:
                </div>
                <div class="col-sm-3">
                    <input type="text" class="form-control student_form" required name="UserMobileNo" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" align="right">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </div>
}
            